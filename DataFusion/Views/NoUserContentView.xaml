<Grid x:Class="DataFusion.Views.NoUserContentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DataFusion.Views"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:helper="clr-namespace:DataFusion.Interfaces.Helper;assembly=DataFusion.Interfaces"
             mc:Ignorable="d" Height="29">
    <Grid >
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0"   ToolTip="更新" 
                Name="ButtonUpdate" Style="{StaticResource ButtonIcon}"
                Foreground="{DynamicResource PrimaryTextBrush}"
                hc:IconElement.Geometry="{StaticResource UpdateGeometry}"/>
        <ToggleButton Grid.Column="2" x:Name="ButtonSetting" Style="{StaticResource ToggleButtonIcon}" Foreground="{DynamicResource PrimaryTextBrush}"
                    hc:IconElement.Geometry="{StaticResource ConfigGeometry}" IsChecked="{Binding IsOpen,ElementName=DrawerRight}" />
        <hc:Drawer  Name="DrawerRight"  ShowMode="Push" >
            <Border CornerRadius="4"  DataContext="{Binding SystemConfigViewModel, Source={StaticResource Locator}}" Background="{DynamicResource RegionBrush}" Width="300" BorderThickness="0,1,0,0" BorderBrush="{DynamicResource BorderBrush}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="200" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Margin="10"  Grid.Row="0" HorizontalAlignment="Left" Grid.Column="0"  Text="Redis服务器:" Style="{StaticResource TextBlockDefault}" />
                    <TextBox Margin="10" Height="30" Grid.Row="0" Grid.Column="1" Text="{Binding RedisServer}" />
                    <TextBlock Margin="10"    Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left"  Text="Redis密码:"  Style="{StaticResource TextBlockDefault}" />
                    <PasswordBox Margin="10"  Height="30"  Grid.Row="1" Grid.Column="1"  helper:PasswordBoxHelper.Attach="True" PasswordChar="*" helper:PasswordBoxHelper.Password="{Binding RedisPwd,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Border>
        </hc:Drawer>

